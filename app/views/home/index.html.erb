
<div>
  Username: <%= @user.username %>
</div>
<div>
  Zip: <%= @user.zip %>
</div>
<div>
  Twitter: <%= link_to @user.twitter, 'http://twitter.com/' + @user.twitter %>
</div>
<div>
  Facebook: <%= link_to @user.facebook, 'http://facebook.com/' + @user.facebook %>
</div>

<div>
<%- if current_user.blank? -%>
  <%= link_to 'sign up', new_user_registration_path  %>
  or
  <%= link_to 'sign in', new_user_session_path  %>
<%- else -%>
  You're signed in! To sign out go to <%= link_to 'sign out', destroy_user_session_path, :method => :delete %>
<%- end -%>
</div>

